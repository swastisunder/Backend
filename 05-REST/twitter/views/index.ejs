<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Posts</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <h1 class="heading">All Posts</h1>

    <div class="posts-container">
      <% posts.forEach(post => { %>
      <div class="card">
        <h3><%= post.username %></h3>
        <p><%= post.content %></p>

        <div class="btn-group">
          <a href="/posts/<%= post.id %>" class="show-btn">Show</a>
          <a href="/posts/<%=post.id%>/edit" class="edit-btn">Edit</a>
          <form action="/posts/<%=post.id%>?_method=DELETE" method="post">
            <button>Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Floating Add Button -->

    <a href="/posts/new" title="Add Post" class="add-btn">+</a>
  </body>
</html>
